# Immich Auto-Uploader Configuration

# Immich server configuration
IMMICH_API_URL=http://localhost:2283/api
IMMICH_API_KEY=your_api_key_here

# Directories to watch for new files (comma-separated)
WATCH_DIRECTORIES=/home/user/Downloads,/home/user/Pictures/Camera

# Directory to archive uploaded files
ARCHIVE_DIRECTORY=/home/user/Pictures/Archived

# Supported file extensions (comma-separated)
SUPPORTED_EXTENSIONS=jpg,jpeg,png,gif,bmp,tiff,webp,mp4,mov,avi,mkv,wmv,flv,m4v,3gp

# Polling interval in seconds (how often to check for new files)
POLL_INTERVAL_SECONDS=10

# Log level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Maximum file size in MB (files larger than this will be skipped)
MAX_FILE_SIZE_MB=1000